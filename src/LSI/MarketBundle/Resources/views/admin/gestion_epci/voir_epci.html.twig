{% extends 'LSIMarketBundle::monespace.html.twig' %}

{% block title %}
    Détail d'un EPCI - {{ parent() }}
{% endblock title %}

{% block monespace %}
    <div class="row">
        <div class="well">
            <h3>Détails de l'EPCI</h3>
            <table>
                <tr>
                    <td>Nom de l'EPCI : </td>
                    <td>{{ epci.nom }}</td>
                </tr>
                <tr>
                    <td>Description de l'EPCI : </td>
                    <td>{{ epci.description }}</td>
                </tr>
                {% for key, cp in epci.codePostal %}
                    <tr>
                        <td> Code postal {{ key + 1 }} : </td>
                        <td>{{ cp.code }}</td>
                    </tr>
                {% endfor %}
            </table>
            <div class="row">
                <a role="button" class="btn btn-warning" href="{{ path('ls_imarket_modifier_epci', {'id': epci.id}) }}">
                    <span class="glyphicon glyphicon-edit"></span> Modifier
                </a>
            </div>
        </div>
    </div>
{% endblock monespace %}