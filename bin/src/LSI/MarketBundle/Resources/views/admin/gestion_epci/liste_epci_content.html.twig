<body>
    <div class="row well">
        <h2>Liste des EPCI </h2>
        <table id="epci" class="table table-striped table-bordered">
            <thead>
            <tr class="success">
                <th>Nom de l'EPCI</th>
                <th>Description</th>
                <th>Code(s) postal (aux)</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for epci in listeepci %}
                <tr>
                    <td>{{ epci.nom }}</td>
                    <td>{{ epci.description }}</td>
                    <td>
                        {% for cp in epci.codePostal %}
                            {{ cp.code }} |
                        {% endfor %}
                    </td>
                    <td>
                        <a role="button" class="btn btn-success" id="voir" href="{{ path('ls_imarket_voir_epci', {'id': epci.id}) }}">
                            <span class="glyphicon glyphicon-eye-open"></span> Consulter
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td>Vous n'avez ajout√© aucun EPCI !</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</body>
